-- Função de troll: Fazer o jogador ser pequeno e voltar ao normal
createButton("Mini Pessoa", UDim2.new(0, 20, 0, 420), function()
    local size = 0.5
    Player.Character:SetPrimaryPartCFrame(Player.Character.PrimaryPart.CFrame)
    Player.Character:SetPrimaryPartCFrame(Player.Character.PrimaryPart.CFrame * CFrame.new(0, size, 0))
end)

createButton("Voltar ao Tamanho Normal", UDim2.new(0, 20, 0, 460), function()
    local normalSize = 1
    Player.Character:SetPrimaryPartCFrame(Player.Character.PrimaryPart.CFrame)
    Player.Character:SetPrimaryPartCFrame(Player.Character.PrimaryPart.CFrame * CFrame.new(0, normalSize, 0))
end)

-- Função de troll: Teleportar para o céu
createButton("Teleportar para o Céu", UDim2.new(0, 20, 0, 500), function()
    local skyPosition = Vector3.new(0, 1000, 0)
    Player.Character:SetPrimaryPartCFrame(CFrame.new(skyPosition))
    print("Teleportado para o céu!")
end)

