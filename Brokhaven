-- Variáveis e Inicialização
local bannedPlayers = {}  -- Lista de jogadores banidos por número de casa
local roommateData = {}    -- Dados de colegas de quarto (casa -> jogador)
local selectedHouse = nil  -- Número da casa selecionada
local Player = game.Players.LocalPlayer
local Panel = Instance.new("Frame")
local ScreenGui = Instance.new("ScreenGui")

-- Criando a interface
ScreenGui.Parent = Player:WaitForChild("PlayerGui")
Panel.Parent = ScreenGui
Panel.Size = UDim2.new(0, 400, 0, 600)
Panel.Position = UDim2.new(0.5, -200, 0.5, -300)
Panel.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
Panel.Visible = true

-- Função para criar botões
local function createButton(name, position, callback)
    local Button = Instance.new("TextButton")
    Button.Parent = Panel
    Button.Size = UDim2.new(0, 360, 0, 30)
    Button.Position = position
    Button.Text = name
    Button.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
    Button.TextColor3 = Color3.new(1, 1, 1)
    Button.MouseButton1Click:Connect(callback)
    return Button
end

-- Função para criar textboxes com rótulos
local function createLabeledTextBox(name, position, placeholder, callback)
    local Label = Instance.new("TextLabel")
    Label.Parent = Panel
    Label.Size = UDim2.new(0, 150, 0, 30)
    Label.Position = position
    Label.Text = name
    Label.TextScaled = true
    Label.BackgroundTransparency = 1
    Label.TextColor3 = Color3.new(1, 1, 1)

    local TextBox = Instance.new("TextBox")
    TextBox.Parent = Panel
    TextBox.Size = UDim2.new(0, 200, 0, 30)
    TextBox.Position = position + UDim2.new(0, 160, 0, 0)
    TextBox.PlaceholderText = placeholder
    TextBox.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
    TextBox.TextColor3 = Color3.new(1, 1, 1)
    TextBox.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            callback(TextBox.Text)
        end
    end)
    return TextBox
end

-- Função para escolher número da casa
createLabeledTextBox("Escolher número da casa", UDim2.new(0, 20, 0, 20), "Digite número", function(value)
    selectedHouse = tonumber(value)
    if selectedHouse then
        print("Casa escolhida: " .. selectedHouse)
    else
        print("Número inválido de casa.")
    end
end)

-- Função para adicionar colega de quarto
createButton("Adicionar Colega de Quarto", UDim2.new(0, 20, 0, 60), function()
    if selectedHouse then
        local targetPlayer = game.Players:GetPlayers()[math.random(1, #game.Players:GetPlayers())] -- Simulando escolha aleatória de jogador
        print(targetPlayer.Name .. " adicionado como colega de quarto da casa " .. selectedHouse)
        roommateData[selectedHouse] = roommateData[selectedHouse] or {}
        table.insert(roommateData[selectedHouse], targetPlayer.Name)
    else
        print("Selecione uma casa primeiro!")
    end
end)

-- Função de desbanir jogador
createButton("Desbanir Jogador", UDim2.new(0, 20, 0, 100), function()
    if selectedHouse then
        local targetPlayerName = game.Players:GetPlayers()[math.random(1, #game.Players:GetPlayers())].Name -- Simulando escolha aleatória de jogador
        if table.find(roommateData[selectedHouse] or {}, targetPlayerName) then
            print(targetPlayerName .. " desbanido da casa " .. selectedHouse)
            -- Aqui você pode implementar a lógica para reverter o banimento (ou qualquer outra ação)
            -- por exemplo, removendo o jogador da lista de "banidos"
        else
            print(targetPlayerName .. " não é colega de quarto da casa " .. selectedHouse)
        end
    else
        print("Selecione uma casa primeiro!")
    end
end)

-- Função para ver a tela dos outros jogadores
createButton("Ver Tela de Outro Jogador", UDim2.new(0, 20, 0, 140), function()
